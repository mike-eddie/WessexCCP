<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content, :input_html =>{:class => 'wysihtml5' } %>
    <%= f.input :btn, label:"Add Button?" %>
    <%= f.input :btntext, label:"Button text" %>
    <%= f.input :btnlink, label:"Button link" %>
    <%= f.input :date %>
    <%= f.input :colour, :collection => COLOURS %>
    <%= f.input :pin, label: "Pin this article" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
  $('#article_content').wysihtml5({
  "html": true, //Button which allows you to edit the generated HTML. Default false
  "color": true //Button to change color of font  
});
</script>


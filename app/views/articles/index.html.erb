<h1>Listing articles</h1>

<table class ="table table-condensed table-striped">
  <tr>
    <th><%= sortable "title", "Title" %></th>
    <th><%= sortable "content", "Content" %></th>
    <th><%= sortable "btn", "Button" %></th>
    <th><%= sortable "btntext", "Button text" %></th>
    <th><%= sortable "btnlink", "Button link" %></th>
    <th><%= sortable "date", "Date" %></th>
    <th><%= sortable "colour", "Colour" %></th>
    <th><%= sortable "pin", "Pinned" %></th>
    <th>Actions</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= article.btn %></td>
    <td><%= article.btntext %></td>
    <td><%= article.btnlink %></td>
    <td><%= article.date %></td>
    <td><%= article.colour %></td>
    <td><%= article.pin %></td>
    <td>
        <%= link_to 'Show', article, class: "btn btn-nephritis btn-xs" %>
        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-river btn-xs" %>
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-alizarin btn-xs" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Article', new_article_path, class: "btn btn-nephritis btn-sm" %>

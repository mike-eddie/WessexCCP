<h1> Curriculum </h1>


<% @units.each do |unit| %>
  <h3><%= unit.title %></h3>

  <br />
     
  
      <% unit.themes.each do |theme| %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= theme.title %></h3>
        </div>
          
        <div class="panel-body">
          <table class="table table-condensed">
          <% theme.topics.each do |topic| %>
              <tr>
                <th><%= topic.title %></th>
              </tr>

              <% topic.outcomes.each do |outcome| %>
                <tr>
                  <td><%= outcome.outcome %></td>
                </tr>
              <% end %>
           
       
          <% end %> 
          </table>
        </div>
      </div>
      <% end %>

  
  <% end %>

<br />





 

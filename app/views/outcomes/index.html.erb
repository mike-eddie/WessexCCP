<h1>Learning outcomes</h1>

<br />

<table class="table table-condensed">
  <tr>
    <th><%= sortable "topic_id" , "Topic" %></th>
    <th><%= sortable "outcome" , "Outcome" %></th>
    <th>Actions</th>
  </tr>

<% @outcomes.each do |outcome| %>
  <tr>
    <td><%= outcome.topic.title %></td>
    <td><%= outcome.outcome %></td>
    <td>
      <%= link_to 'Show', outcome, class: "btn btn-default btn-xs" %>
      <%= link_to 'Edit', edit_outcome_path(outcome), class: "btn btn-primary btn-xs" %>
      <%= link_to 'Destroy', outcome, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Outcome', new_outcome_path, class: "btn btn-success btn-sm" %>

<h2>Import Outcomes</h2>
<%= form_tag import_outcomes_path, multipart: true do %>
  <%= file_field_tag :file %>
  <br />
  <%= submit_tag "Import", class: "btn btn-primary btn-sm"%>
<% end %>


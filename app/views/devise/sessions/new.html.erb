<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class = "row">
  	<br />
  	<div class = "col-md-4"></div>
  		<div class = "col-md-4">
  			<div class="panel panel-midnight">
  				<div class="panel-heading">
   	 					<h3 class="panel-title" align="center">Wessex CCP Portfolio - Sign in</h3>
  					  </div>
  				<div class="panel-body">
					  <div class="form-inputs">
					    <%= f.input :email, :required => false, :autofocus => true, placeholder: "Enter email"%> 
					    <br />
					    <%= f.input :password, :required => false, placeholder: "Password" %>
					    <br />
					    <%= f.input :remember_me, :wrapper => :inline_checkbox, :as => :boolean if devise_mapping.rememberable? %>
					    <br />
					  </div>
					  <div class="form-actions">
					    <%= f.button :submit, "Log in", class: "btn btn-nephritis btn-block" %>
					  </div>

					  <br />

					 <div class = "row">
					 	<div class = "col-md-6">
					 		<p align = "center"><%= link_to "Create an account", new_registration_path(resource_name), class: "btn btn-river btn-block"%> </p>
					 	</div>
					 	<div class = "col-md-6">
					 	    <p align = "center"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-alizarin btn-block" %></p>
					 	</div>
					 </div>
				</div>
			</div>
		</div>
	<div class = "col-md-4"></div>
</div>


<% end %>



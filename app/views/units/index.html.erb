<h1>Units</h1>

<br />

<table class="table table-condensed table-striped">
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.title %></td>
    <td>
      <%= link_to 'Show', unit, class: "btn btn-nephritis btn-xs" %>
      <%= link_to 'Edit', edit_unit_path(unit), class: "btn btn-river btn-xs" %>
      <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-alizarin btn-xs" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Unit', new_unit_path, class: "btn btn-nephritis btn-sm" %>

<h2>Import Units</h2>
<%= form_tag import_units_path, multipart: true do %>
  <%= file_field_tag :file %>
  <br />
  <%= submit_tag "Import", class: "btn btn-wisteria btn-sm"%>
<% end %>

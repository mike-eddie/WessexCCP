<h1>Topics</h1>

<table class="table table-condensed">
  <tr>
    <th><%= sortable "theme_id", "Theme" %></th>
    <th><%= sortable "title", "Topic" %></th>
    <th>Actions</th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.theme.title %></td>
    <td><%= topic.title %></td>
    <td>
      <%= link_to 'Show', topic, class: "btn btn-default btn-xs" %>
      <%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-primary btn-xs" %>
      <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Topic', new_topic_path, class: "btn btn-success btn-sm" %>

<h2>Import Topics</h2>
<%= form_tag import_topics_path, multipart: true do %>
  <%= file_field_tag :file %>
  </br>
  <%= submit_tag "Import", class: "btn btn-primary btn-sm"%>
<% end %>
